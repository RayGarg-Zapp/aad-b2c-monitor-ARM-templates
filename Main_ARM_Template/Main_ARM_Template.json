{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "rgName": {
      "type": "string",
      "defaultValue": "RG-AzureAD-B2C-Monitoring",
      "metadata": {
        "description": "Name of the Resource Group to create or use."
      }
    },
    "rgLocation": {
      "type": "string",
      "defaultValue": "East US",
      "allowedValues": [
        "East US",
        "East US 2",
        "West US",
        "West Europe",
        "North Europe"
      ],
      "metadata": {
        "description": "Location for all resources. Choose from the list of allowed locations."
      }
    },
    "logAnalyticsLinkedTemplateURL": {
      "type": "string",
      "metadata": {
        "description": "URL to the Log Analytics Workspace Linked Template."
      }
    },
    "storageAccountsLinkedTemplateURL": {
      "type": "string",
      "metadata": {
        "description": "URL to the Storage Accounts Linked Template."
      }
    },
    "applicationsLinkedTemplateURL": {
      "type": "string",
      "metadata": {
        "description": "URL to the Applications Linked Template."
      }
    },
    "databasesLinkedTemplateURL": {
      "type": "string",
      "metadata": {
        "description": "URL to the Databases Linked Template."
      }
    },
    "automationAccountsLogicAppsLinkedTemplateURL": {
      "type": "string",
      "metadata": {
        "description": "URL to the Automation Accounts and Logic Apps Linked Template."
      }
    }
  },
  "variables": {
    "resourceGroupID": "[resourceId('Microsoft.Resources/resourceGroups', parameters('rgName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2021-04-01",
      "location": "[parameters('rgLocation')]",
      "name": "[parameters('rgName')]",
      "tags": {
        "environment": "demo",
        "project": "AzureAD-B2C-Monitoring"
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "Deploy_LogAnalyticsWorkspaces",
      "dependsOn": [
        "[variables('resourceGroupID')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('logAnalyticsLinkedTemplateURL')]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "Deploy_StorageAccounts",
      "dependsOn": [
        "[variables('resourceGroupID')]",
        "[resourceId('Microsoft.Resources/deployments', 'Deploy_LogAnalyticsWorkspaces')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('storageAccountsLinkedTemplateURL')]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "Deploy_Applications",
      "dependsOn": [
        "[variables('resourceGroupID')]",
        "[resourceId('Microsoft.Resources/deployments', 'Deploy_StorageAccounts')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('applicationsLinkedTemplateURL')]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "Deploy_Databases",
      "dependsOn": [
        "[variables('resourceGroupID')]",
        "[resourceId('Microsoft.Resources/deployments', 'Deploy_Applications')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('databasesLinkedTemplateURL')]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "Deploy_AutomationAccounts_LogicApps",
      "dependsOn": [
        "[variables('resourceGroupID')]",
        "[resourceId('Microsoft.Resources/deployments', 'Deploy_Databases')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('automationAccountsLogicAppsLinkedTemplateURL')]",
          "contentVersion": "1.0.0.0"
        }
      }
    }
  ],
  "outputs": {
    "deploymentStatus": {
      "type": "string",
      "value": "Deployment completed for Resource Group: [parameters('rgName')]"
    }
  }
}
